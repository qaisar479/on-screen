<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/presentationName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.02"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="onPresentationClick"
        android:clickable="true"
        android:text="@string/presentation_name"
        android:textSize="14pt" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/prev"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:layout_weight="0.50"
            android:onClick="onPrevClick"
            android:text="@string/prev_button" />

        <Button
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:layout_weight="0.50"
            android:onClick="onNextClick"
            android:text="@string/next_button" />

    </LinearLayout>

    <Chronometer
        android:id="@+id/chrono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.23"
        android:gravity="center_vertical|center_horizontal"
        android:text="0:00:00"
        android:textSize="80sp" />
    
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

	    <Button
	        android:id="@+id/start"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="0.33"
	        android:onClick="onStartClick"
	        android:text="@string/start_button" />
	
	    <Button
	        android:id="@+id/pause"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="0.33"
	        android:onClick="onPauseClick"
	        android:text="@string/pause_button" />
	
	    <Button
	        android:id="@+id/reset"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="0.34"
	        android:onClick="onResetClick"
	        android:text="@string/reset_button" />
	</LinearLayout>
	
    <Button
        android:id="@+id/blankscreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onBlankClick"
        android:text="@string/blank_button" />

</LinearLayout>
